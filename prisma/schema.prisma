generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  // Clerk provided ID
  id       String    @id @unique
  // Default to a Clerk provided username but can be changed
  username String
  // Programs someone is following
  programs Program[]
}

model Program {
  // Provided by API
  id   Int    @id @unique
  name String @unique

  User     User[]
  Episodes Episode[]

  channelId Int?
  Channel   Channel? @relation(fields: [channelId], references: [id])
}

model Episode {
  // Provided by API
  id   Int    @id @unique
  name String

  programId Int?
  program   Program? @relation(fields: [programId], references: [id])
  channelId Int?
  Channel   Channel? @relation(fields: [channelId], references: [id])
}

model Channel {
  // Provided by API
  id   Int    @id @unique
  name String

  programs Program[]
  episodes Episode[]
}
