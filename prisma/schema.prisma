generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  // Clerk provided ID
  id       String    @id @unique
  // Default to a Clerk provided username but can be changed
  username String    @unique
  // Programs someone is following
  programs Program[]
}

model Program {
  // Provided my API
  id       Int       @id @unique
  User     User[]
  Episodes Episode[]
}

model Episode {
  // Provided my API
  id        Int     @id @unique
  programId Int
  program   Program @relation(fields: [programId], references: [id])
}
