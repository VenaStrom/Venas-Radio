generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  // Clerk provided ID
  id String @id @unique
  // Default to a Clerk provided username but can be changed

  // Programs you are following
  programs Program[]
  // Episodes you are following
  channels Channel[]

  /**
   * Options
   */
  // Fetch span in days
  fetchSpan Int    @default(7)
  // How the server renders the feed
  feedSort  String @default("oldest-per-day") // newest, oldest, oldest-per-day
}

model Program {
  // Provided by API
  id          Int      @id @unique
  name        String   @unique
  publishDate DateTime

  Users    User[]
  Episodes Episode[]

  channelId Int?
  Channel   Channel? @relation(fields: [channelId], references: [id])
}

model Episode {
  // Provided by API
  id          Int      @id @unique
  name        String
  publishDate DateTime

  programId Int?
  program   Program? @relation(fields: [programId], references: [id])
  channelId Int?
  Channel   Channel? @relation(fields: [channelId], references: [id])
}

model Channel {
  // Provided by API
  id   Int    @id @unique
  name String

  programs Program[]
  episodes Episode[]
  User     User?     @relation(fields: [userId], references: [id])
  userId   String?
}
