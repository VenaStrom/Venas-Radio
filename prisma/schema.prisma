generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  // Clerk provided ID
  id String @id @unique
  // Default to a Clerk provided username but can be changed

  // Programs you are following
  programs Program[]
  // Episodes you are following
  channels Channel[]

  /**
   * Options
   */
  // Fetch span in days
  fetchSpan     Int          @default(7)
  // How the server renders the feed
  feedSort      String       @default("oldest-per-day") // newest, oldest, oldest-per-day
}